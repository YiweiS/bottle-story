<form id="bottleform">
    <input name="message" type="text" placeholder="Type your message here" />
    <input type="submit" value="Throw your bottle" color= #166ABA/>
</form>
<form method="get" action="/"><button type="submit">Homepage</button></form>

<script>

    $('#bottleform').submit(function(event) {
        event.preventDefault();
        $.post('/bottles/throw', $('#bottleform').serialize(), function(data) {
            alert(data);
        });
    });

</script>